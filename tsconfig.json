{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "lib": ["dom", "es6", "ES2022"],
        "skipLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "dist",
        "moduleResolution": "Node",
        "removeComments": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "*": ["src/*"]
        }
    },
    "exclude": ["node_modules", "tachyon"],
    "include": ["src/**/*"],
    "references": [
        {
            "path": "./tachyon"
        }
    ],
    "ts-node": {
        "swc": true
    }
}
