{
    "compilerOptions": {
        "target": "es2022",
        "module": "es2022",
        "lib": ["es6", "es2022"],
        "skipLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        //"outDir": "dist",
        "noEmit": true,
        "moduleResolution": "node",
        "removeComments": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": true,
        "baseUrl": ".",
        "noUnusedParameters": false,
        "noUnusedLocals": false,
        "paths": {
            "@/*": ["src/*"],
            "tachyon/*": ["tachyon/*"]
        },
        "plugins": []
    },
    "exclude": ["tachyon"],
    "include": ["src/**/*"],
    "references": [
        {
            "path": "./tachyon"
        }
    ],
    "ts-node": {
        "esm": true,
        "swc": true
    }
}
