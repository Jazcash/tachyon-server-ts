{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "lib": ["dom", "es6", "ES2022", "esnext.asynciterable"],
        "skipLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "./dist",
        "moduleResolution": "Node",
        "removeComments": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": true,
        "baseUrl": "."
    },
    "exclude": ["node_modules", "**/__tests__/*"],
    "include": ["src/**/*"]
}
