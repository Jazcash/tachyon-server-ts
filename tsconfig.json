{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": ["es2022"],
        "skipLibCheck": true,
        "noEmit": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": true,
        "baseUrl": ".",
        "noUnusedParameters": false,
        "noUnusedLocals": false,
        "paths": {
            "@/*": ["src/*"]
        },
        "types": ["@fastify/express"]
    },
    "include": ["src/**/*"],
    "ts-node": {
        "esm": true,
        "swc": true,
        "require": ["tsconfig-paths/register"]
    }
}
